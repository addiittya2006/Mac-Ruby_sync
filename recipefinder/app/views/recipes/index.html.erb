<h1>Seaching for: <%= @term %> </h1>

<% #@ob %>

<table border="2">
  <tr>
    <th>Thumb</th>
    <th>Title</th>
    <th>Rank</th>
  </tr>
  <% if !@recipes.nil? %>
    <% @recipes.each do |recipe| %>
        <tr>
          <td><%= link_to image_tag(recipe['image_url'], size: '100x100'), recipe['f2f_url'] %></td>
          <td><%= link_to strip_tags(recipe['title']).html_safe, recipe['f2f_url'] %></td>
          <td><%= recipe['social_rank'] %></td>
        </tr>
      <% end %>
  <% end %>
</table>